@using WebUI.Areas.User.Models
@{
    Layout = "_Layout";
}
@model VacancyModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script>alertify.success('Success notification message.');</script>

<div class="card-body">
    <h3>Yeni vakansiya əlavə et</h3>
    <br />
    <form class="forms-sample" asp-controller="Vacancy" asp-action="Update" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputName1">Başlıq</label>
            <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="">
            <input type="hidden" asp-for="Id" class="form-control" id="exampleInputName1" placeholder="">
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />
            <label for="exampleInputName1">Şirkət</label>
            <input type="text" asp-for="CompanyName" class="form-control" id="exampleInputName1" placeholder="">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
            <br />
            <label for="exampleInputName1">İş haqqında məlumat</label>
            <textarea type="text" style="height:200px" asp-for="JobInformation" class="form-control" id="exampleInputName1" placeholder=""></textarea>
            <span asp-validation-for="JobInformation" class="text-danger"></span>
            <br />
            <label for="exampleInputName1">Namizədə tələblər</label>
            <textarea type="text" style="height:200px" asp-for="Requirements" class="form-control" id="exampleInputName1" placeholder=""></textarea>
            <span asp-validation-for="Requirements" class="text-danger"></span>
            <br />
            <label for="exampleInputName1">Müraciət</label>
            <input type="text" asp-for="Appeal" class="form-control" id="exampleInputName1" placeholder="">
            <span asp-validation-for="Appeal" class="text-danger"></span>
            <br />
            <button type="submit" class="btn btn-info">Təstiqlə</button>
            <a asp-action="Index" asp-controller="Vacancy" class="btn btn-white btn-sm">Ləğv et</a>
        </div>
    </form>
</div>